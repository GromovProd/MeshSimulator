<Window x:Class="MeshSimulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <DataGrid x:Name="dgrid" AutoGenerateColumns="False"
                  ItemsSource="{Binding enviroment.Stations}"
                  HorizontalAlignment="Stretch"  VerticalAlignment="Stretch">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Width="175" 
                             Binding="{Binding Id}"></DataGridTextColumn>
                <DataGridTextColumn Header="Current State" 
                             Binding="{Binding CurrentState}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Button  Click="Button_Click" Height="100"/>
    </StackPanel>
</Window>
